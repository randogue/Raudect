<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--Header: contains picture and name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/primary"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/listfragment_border"
                    android:padding="2dp"
                    >
                    <ImageView
                        android:id="@+id/profileFragment_profilePicture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/listfragment_border"
                        android:contentDescription="@string/profileFragment_imageView_pictureDesc_string"
                        android:scaleType="centerCrop"
                        android:src="@drawable/person_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="220dp"
                    android:layout_height="2dp"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:id="@+id/profileFragment_textView_greeting_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="Hello, [UserName]!"
                    />
            </LinearLayout>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:dividerColor="@color/tersier"
                />
            <!--Body-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="50dp"
                android:padding="20dp"
                android:background="@drawable/custom_border"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tersier"
                    android:text="@string/profileFragment_textView_title_string"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    app:dividerColor="@color/tersier"
                    android:layout_marginBottom="10dp"
                    />
                <!--editPicture-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/profileFragment_textView_editPicture_string"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        >
                        <Button
                            android:id="@+id/profileFragment_button_editPicture_id"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/profileFragment_button_editPicture_string"
                            android:gravity="center"
                            android:backgroundTint="@color/tersier"
                            android:textColor="@color/primary"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--editUsername-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/profileFragment_textView_editUsername_string"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/profileFragment_textEdit_editUsername_string"
                        style="@style/inputFragment_inputLayout_style"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profileFragment_textInput_editUsername_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/inputFragment_inputEdit_style"
                            android:inputType="text"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/profileFragment_button_submit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/editorFragment_button_submit_string"
                    android:gravity="center"
                    android:backgroundTint="@color/tersier"
                    android:textColor="@color/primary"
                    />
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/profileFragment_button_delete"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/profileFragment_button_delete_string"
                    android:gravity="center"
                    android:backgroundTint="@color/suspicious"
                    android:textColor="@color/primary"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>