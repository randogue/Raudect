<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailFragment"
    android:background="@color/secondary">

    <!-- TODO: Update blank fragment layout -->
    <!--body-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/listfragment_border"
        android:layout_margin="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--PageTag-->
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:text="Detail"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="38dp"
                android:layout_height="1dp"
                app:dividerColor="@color/black"
                />

            <!--Personal Title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/inputFragment_title_style"
                    android:text="@string/detailFragment_textView_title_string"
                    />
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:background="@drawable/person_logo"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>

            <!--row:cardNumber-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_cardNumber_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_cardNumber_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:dateOfBirth-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_dateOfBirth_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_dateOfBirth_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:job-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_job_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_job_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_address_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_address_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:cityPopulation-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_cityPopulation_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_cityPopulation_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>


            <!--Divider-->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                />


            <!--Transaction Title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/inputFragment_title_style"
                    android:text="@string/detailFragment_textView_transactionTitle_string"
                    />
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:background="@drawable/note_logo"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>

            <!--row:transactionTime-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_transactionTime_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_transactionTime_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:category-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_transactionCategory_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_category_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:amount-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_transactionAmount_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_transactionAmount_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:latitude-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_transactionLatitude_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_transactionLatitude_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:transactionLongitude-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_transactionLongitude_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_transactionLongitude_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <!--row:transactionTime-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/listfragment_border"
                    android:text="@string/detailFragment_textView_transactionMerchants_string"
                    />
                <TextView
                    android:id="@+id/detailFragment_transactionMerchant_id"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>