<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Element1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listfragment_border_body"
        android:layout_marginBottom="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/list_cardNumber_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="CardNum (Amount$)"
                    android:textStyle="bold"
                    android:gravity="start"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    app:dividerColor="@color/tersier"/>
            </LinearLayout>
            <TextView
                android:id="@+id/list_transactionDate_id"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:text="dd/mm/yyyy"
                android:background="@drawable/listfragment_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/list_description_id"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:padding="4dp"
                android:background="@drawable/listfragment_border"
                android:text="(Lat:12345678)(Lon:1234578)\nMerchant1, Merchant2, Merchant3"
                />
            <TextView
                android:id="@+id/list_indicator_id"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                style="@style/listFragment_textView_indicator_style"
                android:gravity="center"
                android:text="@string/list_suspicious_string"
                android:textColor="@color/suspicious"
                />
        </LinearLayout>
    </LinearLayout>
    <!--Element1 [End]-->

</LinearLayout>