<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Raudect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/tersier</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorTertiary">@color/primary</item>
    </style>

    <style name="Theme.Raudect" parent="Base.Theme.Raudect" />

    <style name="Theme.NavigationDrawer.NoActionBar"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationDrawer.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.NavigationDrawer.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light"/>


    <!--TODO: this is styles for fragment_input.xml-->
    <style name="inputFragment_title_style"
        parent="@style/TextAppearance.Material3.TitleLarge">
        <!--alsoFor:fragment_list.xml-->
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inputFragment_inputLayout_style">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="inputFragment_inputEdit_style">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="inputFragment_button_submit_style"
        parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/tersier</item>
    </style>
    <!--end-->



    <!--TODO: this is styles for fragment_list.xml-->
    <style name="listFragment_textView_head_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="listFragment_textView_indicator_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--end-->

</resources>